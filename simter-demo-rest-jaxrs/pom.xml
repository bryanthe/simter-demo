  <artifactId>simter-demo-rest-jaxrs</artifactId>
  <name>simter-demo-rest-jaxrs</name>
  <packaging>jar</packaging>
  <description>A Simter Demo</description>
  <dependencies>
    <!-- Simter -->
    <dependency>
      <groupId>tech.simter</groupId>
      <artifactId>simter-rest-jaxrs</artifactId>
    </dependency>
    <dependency>
      <groupId>tech.simter</groupId>
      <artifactId>simter-demo-data</artifactId>
    </dependency>

    <!-- Third Party -->
    <dependency>
      <groupId>javax.ws.rs</groupId>
      <artifactId>javax.ws.rs-api</artifactId>
    </dependency>
    <dependency>
      <groupId>javax.validation</groupId>
      <artifactId>validation-api</artifactId>
