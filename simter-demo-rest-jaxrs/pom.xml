    <!-- Test -->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.mockito</groupId>
      <artifactId>mockito-core</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <profiles>
    <profile>
      <id>simter-unit-test</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <properties>
        <app.env>dev</app.env>
        <app.db>hsql</app.db>
        <app.http>tomcat</app.http>
        <app.rest>jersey</app.rest>
        <app.dll-auto>create-drop</app.dll-auto>
      </properties>
      <dependencies>
        <!-- Simter -->
        <dependency>
          <groupId>tech.simter</groupId>
          <artifactId>simter-genson-ext</artifactId>
          <scope>test</scope>
        </dependency>
        <dependency>
          <groupId>tech.simter</groupId>
          <artifactId>simter-rest-jaxrs-jersey</artifactId>
